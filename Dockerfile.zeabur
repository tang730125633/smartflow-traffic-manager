# Zeabur 部署用的简化 Dockerfile
FROM python:3.10-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY requirements-zeabur.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements-zeabur.txt -i https://pypi.tuna.tsinghua.edu.cn/simple

# 复制项目文件
COPY sftm_server/ ./sftm_server/
COPY run_app.py .

# 创建必要的目录
RUN mkdir -p instance

# 暴露端口
EXPOSE 8080

# 启动应用
CMD ["python", "run_app.py"]
